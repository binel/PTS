@page
@model IndexModel
@{
    ViewData["Title"] = "Todo";
}

<h1>Todo</h1>
<h5>Total Todo: @Model.TotalTodo</h5>
<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Id</th>
            <th>Description</th>
            <th>Created</th>
            <th>Due</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var task in Model.Tasks)
    {
        <tr>
            <td>
                <!-- Mark Complete -->
                <form method="post"
                      asp-page-handler="Complete"
                      asp-route-id="@task.Identifier"
                      class="d-inline">
                    <button type="submit" class="btn btn-success btn-sm" title="Mark complete">complete</button>
                </form>

                <!-- Delete -->
                <form method="post"
                      asp-page-handler="Delete"
                      asp-route-id="@task.Identifier"
                      class="d-inline"
                      onsubmit="return confirm('Delete task @task.Identifier?');">
                    <button type="submit" class="btn btn-danger btn-sm" title="Delete">delete</button>
                </form>
            </td>

            <td>@task.Identifier</td>
            <td>@task.Description</td>
            <td>@task.CreatedAt.ToString("g")</td>
            <td>@(task.DueAt.HasValue ? task.DueAt.Value.ToString("d") : "-")</td>
        </tr>
    }
    </tbody>
</table>