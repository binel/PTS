@page
@model AddTaskModel

<h1>Add a New Task</h1>

<form method="post">
    <div class="form-group">
        <label for="description">Description</label>
        <input asp-for="Description" class="form-control" id="description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="dueAt">Due Date (optional)</label>
        <input asp-for="DueAt" type="date" class="form-control" id="dueAt" />
        <span asp-validation-for="DueAt" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Task</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}